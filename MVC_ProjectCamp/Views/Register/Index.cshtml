@model EntityLayer.Concrete.Writer

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<!--/banner-->
<div class="banner-inner">
</div>
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="index.html">Ana Sayfa</a>
    </li>
    <li class="breadcrumb-item active">Kayıt Ol!</li>
</ol>
<!--//banner-->
<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("SignUp", "Login", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">İsim Soyisim : </label>

                            @* <input type="text" class="form-control" id="validationDefault01" name="WriterName" placeholder="">*@
                            @Html.TextBoxFor(x => x.WriterName)
                            @Html.ValidationMessageFor(x => x.WriterName)
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">E-Posta : </label>
                            @*<input type="email" class="form-control" id="validationDefault02" name="WriterMail" placeholder="">*@
                            @Html.TextBoxFor(x => x.WriterMail)
                            @Html.ValidationMessageFor(x => x.WriterMail)
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifre : </label>
                            @*<input type="password" class="form-control" id="password1" name="WriterPassword" placeholder="">*@
                            @Html.TextBoxFor(x => x.WriterPassword)
                            @Html.ValidationMessageFor(x => x.WriterPassword)
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Şifre Tekrarı : </label>
                            <input type="password" class="form-control" id="password2" name="WriterConfirmPassword" placeholder="">
                           @*@ @Html.TextBoxFor(x => x.WriterConfirmPassword)
                            @Html.ValidationMessageFor(x => x.WriterConfirmPassword)*@
                        </div>
                        <div class="form-group col-md-12">
                            <label for="exampleInputPassword2 mb-2">Profil Resmi : </label>
                            @*<input type="text" class="form-control" id="image" name="WriterImage" placeholder="">*@
                            @Html.TextBoxFor(x => x.WriterImage)
                            @Html.ValidationMessageFor(x => x.WriterImage)
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol!</button>
                    <p>
                        <a href="#" id="btn1">Tüm şartları okudum, kabul ediyorum.</a>
                    </p>
                }
            </div>
        </div>
    </div>
    <br />
    <script>
        $('#btn1').click(function () {
            swal("Sitemizde verdiğiniz mail adresi üzerinden bilgi ve haber e-postaları spam ölçüsüne varmadan gönderilmeye devam edilecektir. Eğer e-posta bülteninden çıkmak isterseniz mail ileti diziseni durdurabilirsiniz. Şifre ve e-posta adresleriniz şifrelenmiş formatta, herhangi bir kullanıcının görmeyeceği şekilde veri tabanımızda saklanmaktadır.");
        });
    </script>
</section>
<!--//main-->
